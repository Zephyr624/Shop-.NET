@model WebApplication3.Pages.DetailsModel
@{
    ViewData["Title"] = "Szczegóły produktu";
}
@{
                string id = Request.Query["id"].ToString();
                Model.ID = Convert.ToInt32(id);
                int point = Model.productList.FindIndex(p=>p.id==Model.ID);
}
<h3>Szczegóły</h3>
<h4>Oto szczegóły produktu: @Html.DisplayFor(model =>Model.productList[point].name)</h4>
 <div class="container">
 <form class="form-horizontal" method="post">
 <div class="form-group">
            
    <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model =>Model.productList[point].name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model =>Model.productList[point].price)
        </dd>
            
    </div>    
 <div class="form-group">
 <div class="col-sm-offset-2 col-sm-10">
 <a asp-page="List">Wróć do listy</a>
 <button class="btn btn btn-primary">dodaj do koszyka</button>
 </div>
 </div>
 </form>
 </div>
