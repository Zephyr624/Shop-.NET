@page
@model WebApplication3.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}
@{
                string id = Request.Query["id"].ToString();
                Model.ID = Convert.ToInt32(id);
                int point = Model.productList.FindIndex(p=>p.id==Model.ID); 
}


<h3>Edytuj</h3>
<h4>Czy na pewno chcesz edytować dane produktu: @Html.DisplayFor(model =>Model.productList[point].name)</h4>
<hr />
<div class="row">
    
    <div class="col-md-4">
        <form method="post">
            <!--<input type="hidden" asp-for="EditProduct.id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
            
            <div class="form-group">
                <label asp-for="EditProduct.name" class="control-label"></label>
                <input asp-for="EditProduct.name" class="form-control" />
                <span asp-validation-for="EditProduct.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditProduct.price" class="control-label"></label>
                <input asp-for="EditProduct.price" class="form-control" />
                <span asp-validation-for="EditProduct.price" class="text-danger"></span>
            </div>
            <div>
            <select asp-for="EditProduct.category" asp-items="@Model.Categorys">
            <option value="0">Please select</option>
            </select>
            <input type="hidden" if="longName" asp-for="@Model.category" hidden/>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>